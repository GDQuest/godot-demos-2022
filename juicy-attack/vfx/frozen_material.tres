code = "shader_type canvas_item;

uniform bool flip ;
uniform float intensity = 1.0;
uniform sampler2D gradient : hint_black; // It can be whatever palette you want


void fragment(){ 
	vec4 col = texture(TEXTURE,UV);
	vec4 base_color = col;
	
	float lum = dot(col.rgb,vec3(0.2126,0.7152,0.0722)); // luminance
	
	
	col.rgb = texture(gradient,vec2(abs(float(flip) - lum),0)).rgb;
	
	
	COLOR = mix(base_color,col,intensity);
}"

